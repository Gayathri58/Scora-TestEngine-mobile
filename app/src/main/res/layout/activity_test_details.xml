<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".test_details.TestDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/test_details_tv"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/text_color_blank"
            android:layout_centerHorizontal="true"
            android:text="Test Details"/>


        <ImageView
            android:id="@+id/userlog_img_view"
            android:layout_below="@+id/test_details_tv"
            android:layout_margin="7dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <TextView
            android:layout_margin="4dp"
            android:id="@+id/user_name_test_details"
            android:layout_below="@+id/userlog_img_view"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/test_name_tv"
            android:layout_below="@+id/user_name_test_details"
            android:layout_toStartOf="@+id/colon_test_name"
            android:text="Subject"
            android:layout_margin="7dp"
            android:textColor="@color/colorPrimary"
            android:layout_toLeftOf="@+id/colon_test_name"
            android:layout_width="wrap_content"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/colon_test_name"
            android:text="  :  "
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:layout_margin="7dp"
            android:layout_below="@+id/user_name_test_details"
            android:layout_width="wrap_content"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/test_name_test_details_tv"
            android:layout_below="@+id/user_name_test_details"
            android:layout_toEndOf="@+id/colon_test_name"
            android:layout_toRightOf="@+id/colon_test_name"
            android:layout_margin="7dp"
            android:layout_width="wrap_content"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/org_name_tv"
            android:layout_below="@+id/test_name_tv"
            android:layout_toStartOf="@+id/colon_test_name"
            android:layout_toLeftOf="@+id/colon_test_name"
            android:text="Organisation"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/org_name_colon"
            android:layout_below="@+id/test_name_tv"
            android:text="  :  "
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/org_name_test_details_tv"
            android:layout_below="@+id/test_name_tv"
            android:layout_margin="5dp"
            android:layout_toEndOf= "@+id/colon_test_name"
            android:layout_toRightOf= "@+id/colon_test_name"
            android:layout_width="wrap_content"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/duration_tv"
            android:layout_below="@+id/org_name_tv"
            android:layout_toStartOf="@+id/duration_colon"
            android:layout_toLeftOf="@+id/duration_colon"
            android:textColor="@color/colorPrimary"
            android:text="Duration"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/duration_colon"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_below="@+id/org_name_tv"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:text="  :  "
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/duration_test_details_tv"
            android:layout_below="@id/org_name_tv"
            android:layout_toEndOf= "@+id/duration_colon"
            android:layout_margin="5dp"
            android:layout_toRightOf= "@+id/duration_colon"
            android:layout_width="wrap_content"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/proceed_test_details_tv"
            android:layout_below="@id/duration_tv"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="@color/color_white"
            android:text="Proceed"
            android:background="@drawable/btn_back_bg"
            android:gravity="center"
            android:layout_width="65dp"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/back_test_details_tv"
            android:layout_below="@id/proceed_test_details_tv"
            android:layout_centerHorizontal="true"
            android:layout_margin="3dp"
            android:text="Back"
            android:gravity="center"
            android:layout_width="55dp"
            android:layout_height="30dp" />

        <ProgressBar
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:id="@+id/progress_bar_test_details"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</layout>